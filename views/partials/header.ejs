            <div id="alert-container"></div>

            <script>
                const successmessage = <%-JSON.stringify(successMessage) %>;
                const errormessage = <%-JSON.stringify(errorMessage) %>;
                if (successmessage) {
                    showCustomAlert(message = successmessage, type = "Success");
                } else {
                    showCustomAlert(message = errormessage, type = "Error")
                }
                function showCustomAlert(message, type) {
                    if (type == "Success") {
                        const container = document.getElementById('alert-container');
                        const existing = container.querySelector('.custom-alert');
                        if (existing) existing.remove();

                        const alert = document.createElement('div');
                        alert.className = `alert alert-success border-success fw-bold  custom-alert  cs_shadow-lg position-relative`;
                        alert.innerHTML = `
                        ${message}
                        `

                        container.appendChild(alert);

                        setTimeout(() => alert.classList.add('show'), 10);

                        setTimeout(() => {
                            alert.classList.remove('show');
                            setTimeout(() => alert.remove(), 300);
                        }, 5000);
                    } else {
                        const container = document.getElementById('alert-container');
                        const existing = container.querySelector('.custom-alert');
                        if (existing) existing.remove();

                        const alert = document.createElement('div');
                        alert.className = `alert alert-danger border-danger fw-bold  custom-alert  cs_shadow-md position-relative`;
                        alert.innerHTML = `
                        ${message}
                        `

                        container.appendChild(alert);

                        setTimeout(() => alert.classList.add('show'), 10);

                        setTimeout(() => {
                            alert.classList.remove('show');
                            setTimeout(() => alert.remove(), 300);
                        }, 5000);
                    }
                }
            </script>

            <% var tooltip='No Tips' ; %>
                <% function renderMenu(menus, currentPath) { %>
                    <ul class="text-dark">
                        <% menus.forEach(menu=> { %>
                            <% if (menu.status==='1' ) { %>
                                <li>
                                    <% if (menu.link==currentPath) { %>
