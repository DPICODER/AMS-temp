  /* Tooltip styles */
  .tooltip-custom {
    position: absolute;
    background: var(--card-bg);
    color: var(--text-primary);
    border: 1px solid var(--border-color);
    border-radius: 0.375rem;
    padding: 0.5rem 0.75rem;
    font-size: 0.75rem;
    box-shadow: var(--card-shadow);
    z-index: 1000;
    opacity: 0;
    pointer-events: none;
    transition: opacity var(--transition-fast);
  }

  .tooltip-custom.show {
    opacity: 1;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .dashboard-container {
      padding: 0.5rem;
      gap: 0.5rem;
    }
    
    .stats-card {
      padding: 1rem;
    }
    
    .chart-card {
      padding: 1rem;
    }
    
    .stats-icon {
      width: 40px;
      height: 40px;
      font-size: 1.25rem;
    }
    
    .stats-value {
      font-size: 1.5rem;
    }
    
    .dashboard-title {
      font-size: 1.25rem;
    }
    
    .dashboard-header {
      flex-direction: column;
      align-items: flex-start;
      /* gap: 0.5rem; */
    }
  }

  /* Data refresh animation */
  @keyframes pulse {
    0% { opacity: 1; }
    50% { opacity: 0.5; }
    100% { opacity: 1; }
  }

  .refreshing {
    animation: pulse 1s ease-in-out;
  }
</style>
