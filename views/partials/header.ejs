                                            <i class="<%= menu.icon %>"></i> &nbsp;
                                            <b class="btn btn-md icons">
                                                <%= menu.name %>
                                            </b>
                                        </a>
                                        <% } else {%>
                                            <a href="<%= menu.link %>">
                                                <i class="<%= menu.icon %>"></i> &nbsp;
                                                <%= menu.name %>
                                            </a>

                                            <% } %>
                                                <% if (menu.children && menu.children.length> 0) { %>
                                                    <%- renderMenu(menu.children, currentPath) %>
                                                        <% } %>
                                </li>
                                <% } %>
                                    <% }) %>
                    </ul>
                    <% } %>