<style>
  :root {
    /* Enhanced color palette with better contrast */
    --primary-color: #1a365d;
    --primary-light: #2d4a7b;
    --secondary-color: #4a5568;
    --accent-color: #3182ce;
    --success-color: #38a169;
    --warning-color: #d69e2e;
    --danger-color: #e53e3e;
    --info-color: #4299e1;
    --light-bg: #f7fafc;
    --card-bg: #ffffff;
    --border-color: #e2e8f0;
    --text-primary: #1a202c;
    --text-secondary: #4a5568;
    --text-muted: #718096;
    
    /* Enhanced shadows for depth */
    --card-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
    --hover-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.08), 0 4px 6px -2px rgba(0, 0, 0, 0.03);
    --active-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    
    /* Modern gradients */
    --gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    --gradient-success: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
    --gradient-warning: linear-gradient(135deg, #ed8936 0%, #d69e2e 100%);
    --gradient-danger: linear-gradient(135deg, #f56565 0%, #e53e3e 100%);
    --gradient-info: linear-gradient(135deg, #4299e1 0%, #3182ce 100%);
    
    /* Animation variables */
    --transition-fast: 0.2s ease;
    --transition-normal: 0.3s ease;
    --transition-slow: 0.5s ease;
  }

  /* Dark mode variables */
  [data-theme="dark"] {
    --primary-color: #e2e8f0;
    --primary-light: #cbd5e0;
    --secondary-color: #a0aec0;
    --accent-color: #63b3ed;
    --success-color: #68d391;
    --warning-color: #f6ad55;
    --danger-color: #fc8181;
    --info-color: #63b3ed;
    --light-bg: #1a202c;
    --card-bg: #2d3748;
    --border-color: #4a5568;
    --text-primary: #f7fafc;
    --text-secondary: #e2e8f0;
    --text-muted: #a0aec0;
    --card-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.2), 0 2px 4px -1px rgba(0, 0, 0, 0.1);
    --hover-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.3), 0 4px 6px -2px rgba(0, 0, 0, 0.2);
  }

  /* Core Layout */
  html, body {
    /* max-height: 99.8%;
    width: 100%; */
    /* overflow: hidden; */
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    color: var(--text-primary);
    background-color: var(--light-bg);
    font-size: 14px;
    transition: background-color var(--transition-normal), color var(--transition-normal);
  }

  .dashboard-container {
    display: flex;
    flex-direction: column;
    /* height: 100vh; */
    padding: 1rem;
    gap: 1rem;
    animation: fadeIn 0.5s ease-out;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .dashboard-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    /* margin-bottom: 0.5rem; */
  }

  .dashboard-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary-color);
    margin: 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .dashboard-title i {
    color: var(--accent-color);
    font-size: 1.75rem;
  }

  .dashboard-actions {
    display: flex;
    gap: 0.5rem;
  }

  .theme-toggle {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all var(--transition-normal);
    color: var(--text-secondary);
  }

  .theme-toggle:hover {
    background: var(--accent-color);
    color: white;
    transform: rotate(180deg);
  }

  .refresh-btn {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all var(--transition-normal);
    color: var(--text-secondary);
  }

  .refresh-btn:hover {
    background: var(--accent-color);
    color: white;
    transform: rotate(90deg);
  }

  .refresh-btn.spinning {
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
  
  .row-fixed {
    flex-shrink: 0;
  }
  
  .row-charts-primary,
  .row-charts-secondary {
    flex: 1;
    min-height: 0; 
  }

  .row-charts-primary > .col-lg-4,
  .row-charts-secondary > .col-12 {
    height: 100%;
  }
  
  /* Enhanced Stat Card Styles */
  .stats-card {
    background: var(--card-bg);
    border-radius: 0.75rem;
    box-shadow: var(--card-shadow);
    padding: 1.25rem;
    transition: all var(--transition-normal);
    height: 100%;
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
    border-left: 4px solid transparent;
    cursor: pointer;
  }

  .stats-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    transform: translateX(-100%);
    transition: transform 0.6s;
  }

  .stats-card:hover::before {
    transform: translateX(100%);
  }

  .stats-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--active-shadow);
  }

  .stats-card.clickable {
    cursor: pointer;
  }

  .stats-card.clickable:hover {
    border-left-color: var(--accent-color);
  }

  /* Color-coded cards */
  .stats-card.all { border-left-color: var(--info-color); }
  .stats-card.free { border-left-color: var(--success-color); }
  .stats-card.repair { border-left-color: var(--warning-color); }
  .stats-card.condemn { border-left-color: var(--danger-color); }

  .stats-card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    /* margin-bottom: 1rem; */
  }

  .stats-icon {
    width: 48px;
    height: 48px;
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    color: white;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: all var(--transition-normal);
  }

  .stats-card:hover .stats-icon {
    transform: scale(1.1);
  }

  /* Icon gradient backgrounds */
  .stats-icon.total { background: var(--gradient-info); }
  .stats-icon.utilization { background: var(--gradient-primary); }
  .stats-icon.value { background: var(--gradient-success); }
  .stats-icon.free { background: var(--gradient-success); }
  .stats-icon.repair { background: var(--gradient-warning); }
  .stats-icon.condemn { background: var(--gradient-danger); }

  .stats-badge {
    font-size: 0.7rem;
    padding: 0.25rem 0.5rem;
    border-radius: 1rem;
    font-weight: 600;
    background: rgba(0, 0, 0, 0.05);
    color: var(--text-secondary);
    transition: all var(--transition-normal);
  }

  .stats-card:hover .stats-badge {
    background: var(--accent-color);
    color: white;
  }

  .stats-label {
    font-size: 0.75rem;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .stats-value {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--primary-color);
    margin: 0;
    line-height: 1.2;
    transition: all var(--transition-normal);
  }

  .stats-card:hover .stats-value {
    transform: scale(1.05);
  }

  .stats-footer {
    margin-top: auto;
    font-size: 0.75rem;
    color: var(--text-muted);
    display: flex;
    align-items: center;
    gap: 0.25rem;
    transition: all var(--transition-normal);
  }

  .stats-card:hover .stats-footer {
    color: var(--accent-color);
  }

  /* Enhanced Chart Card Styles */
  .chart-card {
    background: var(--card-bg);
    border-radius: 0.75rem;
    box-shadow: var(--card-shadow);
    padding: 1.25rem;
    height: 100%;
    display: flex;
    flex-direction: column;
    border: 1px solid var(--border-color);
    transition: all var(--transition-normal);
    position: relative;
    overflow: hidden;
  }

  .chart-card::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: var(--gradient-primary);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform var(--transition-normal);
  }

  .chart-card:hover::after {
    transform: scaleX(1);
  }

