<script>
(function () {
  /* -------------------------------------------------------
     ELEMENTS & GLOBAL STATE
  --------------------------------------------------------*/
  const loader = document.getElementById('loader');
  const yearSelect = document.getElementById('yearselect');
  const masterDiv = document.getElementById('MasterAssetAcquisition');
  const lineCard = document.getElementById('lineItemsCard');
  const displayPONo = document.getElementById('displayPONo');
  const lineTableEl = document.getElementById('Table_AcquLineItems');

  let masterTable = null;
  let lineTable = null;

  /* -------------------------------------------------------
     UTILITIES
  --------------------------------------------------------*/
  function showLoader() { loader.classList.add('show'); }
  function hideLoader() { loader.classList.remove('show'); }

  function showToast(message, type = 'success', delay = 3500) {
    const id = 't' + Math.random().toString(36).slice(2, 9);
    const toast = document.createElement('div');

    toast.className = `toast align-items-center text-bg-${type} border-0`;
    toast.setAttribute('role', 'alert');
    toast.innerHTML = `
      <div class="d-flex">
        <div class="toast-body">${message}</div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
      </div>
    `;

    document.getElementById('toastContainer').appendChild(toast);

    const bsToast = new bootstrap.Toast(toast, { delay });
    bsToast.show();

    toast.addEventListener('hidden.bs.toast', () => toast.remove());
  }

  /* -------------------------------------------------------
     THEME TOGGLE
  --------------------------------------------------------*/
  function initTheme() {
    const savedTheme = localStorage.getItem('theme') || 'light';
    document.documentElement.setAttribute('data-theme', savedTheme);
    updateThemeIcon(savedTheme);
  }

  function updateThemeIcon(theme) {
    const themeIcon = document.querySelector('#themeToggle i');
    themeIcon.className = theme === 'dark' ? 'bi bi-sun-fill' : 'bi bi-moon-fill';
  }

  /* -------------------------------------------------------
     INITIALIZE MASTER TABLE
  --------------------------------------------------------*/
  function initMasterTable(data = []) {
    if (masterTable) {
      masterTable.replaceData(data);
      return;
    }

    masterTable = new Tabulator(masterDiv, {
      layout: "fitColumns",
      data,
      pagination: "local",
      paginationSize: 8, // Increased from 6 to show more records
      placeholder: "<div class='text-center p-2 text-muted'>No acquisitions found.</div>", // Reduced padding
      columns: [
        { 
          title: "Aq Id", 
          field: "id", 
          width: 80, // Reduced from 90
          hozAlign: "center",
          headerSort: true
        },
        { 
          title: "PO number", 
          field: "PO_NO", 
          width: 130, // Reduced from 140
          headerSort: true
        },
        { 
          title: "PO date", 
          field: "PO_Date", 
          width: 110, // Reduced from 120
          headerSort: true,
          formatter: function(cell) {
            const value = cell.getValue();
            return value ? new Date(value).toLocaleDateString() : 'N/A';
          }
        },
        { 
          title: "Vendor", 
          field: "vendorName", 
          widthGrow: 2,
          headerSort: true
        },
        { 
          title: "Quantity", 
          field: "Quantity", 
          hozAlign: "center", 
          width: 100, // Reduced from 110
          headerSort: true
        },
        { 
          title: "Value", 
          field: "Value", 
          hozAlign: "center", 
          width: 110, // Reduced from 120
          headerSort: true,
          formatter: function(cell) {
            const value = cell.getValue();
            return value ? '₹' + Number(value).toLocaleString() : 'N/A';
          }
        },
        {
          title: "Actions",
          width: 120, // Reduced from 160
          hozAlign: "center",
          formatter: function(cell) {
            const row = cell.getRow();
            const data = row.getData();
            return `
              <button class="btn btn-sm btn-primary view-items-btn"
                data-aq-id="${data.id}"
                data-po-no="${data.PO_NO}">
                <i class="bi bi-eye"></i> View
              </button>
            `;
          }
        }
      ]
    });
  }

  /* -------------------------------------------------------
     INITIALIZE LINE TABLE
  --------------------------------------------------------*/
  function initLineTable() {
    if (lineTable) return;

    lineTable = new Tabulator(lineTableEl, {
      layout: "fitDataStretch",
      pagination: "local",
      paginationSize: 8, // Increased from 6 to show more records
      data: [],
      columns: [
        { title: "li_id", field: "li_id", visible: false },
        { title: "PO", field: "aq_po_no", visible: false },
        { title: "Asset Type", field: "li_type", width: 100 }, // Reduced from 120
        { title: "Material Code", field: "li_material_code", width: 130 }, // Reduced from 150
        { title: "Description", field: "li_material_description", widthGrow: 2 },
        { title: "Specs", field: "li_asset_specs", width: 180 }, // Reduced from 200
        { title: "Value", field: "li_po_value", width: 100, hozAlign: "center", // Reduced from 110
          formatter: function(cell) {
            const value = cell.getValue();
            return value ? '₹' + Number(value).toLocaleString() : 'N/A';
          }
        },
        { title: "Quantity", field: "li_qty", width: 90, hozAlign: "center" }, // Reduced from 100
        { title: "Allocated", field: "li_allocated_qty", width: 90, hozAlign: "center" }, // Reduced from 100
        { title: "Remaining", field: "li_available_qty", width: 90, hozAlign: "center" }, // Reduced from 100
        {
          title: "Actions",
          width: 180, // Reduced from 230
          formatter: function (cell) {
            const row = cell.getRow();
            const data = row.getData();
            const canAllot = data.li_available_qty > 0;

            return `
              <button class="btn btn-sm btn-warning edit-row-btn"
                data-li_id="${data.li_id}">
                <i class="bi bi-pencil-square"></i> Edit
              </button>

              <button class="btn btn-sm btn-success allot-btn ${canAllot ? "" : "disabled"}"
                data-li_id="${data.li_id}"
                data-desc="${encodeURIComponent(data.li_material_description)}"
                data-mat="${data.li_material_code}"
                data-po="${data.aq_po_no}">
                <i class="bi bi-box-arrow-in-right"></i> Allot
              </button>
            `;
          }
        }
      ]
    });
  }

  /* -------------------------------------------------------
     FETCH MASTER DATA
  --------------------------------------------------------*/
  async function fetchMasterData(year) {
    try {
      showLoader();
      const res = await fetch(`/ams/api/acquisition/list`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ year })
      });
      const json = await res.json();

      initMasterTable(json.data || []);
      hideLoader();
    } catch (err) {
      hideLoader();
      showToast("Failed to load acquisitions", "danger");
    }
  }

  /* -------------------------------------------------------
     SHOW LINE ITEMS
  --------------------------------------------------------*/
  function showLineItemsFor(aqId, poNo) {
    const d = masterTable.getData().find(x => x.id === aqId);
    if (!d) return showToast("Acquisition data missing", "danger");

    displayPONo.textContent = poNo;

    initLineTable();
    lineTable.replaceData(d._children || []);

    lineCard.style.display = "block";
    window.scrollTo({ top: lineCard.offsetTop - 20, behavior: 'smooth' });
  }

  /* -------------------------------------------------------
     EVENT HANDLERS FOR BUTTONS
  --------------------------------------------------------*/
  document.addEventListener("click", function (e) {
    if (e.target.id === 'hideLineItems') {
      lineCard.style.display = "none";
    }

    /* VIEW ITEMS */
    const viewBtn = e.target.closest(".view-items-btn");
    if (viewBtn) {
      showLineItemsFor(
        parseInt(viewBtn.dataset.aqId, 10),
        viewBtn.dataset.poNo
      );
    }

    /* EDIT ITEM */
    const editBtn = e.target.closest(".edit-row-btn");
    if (editBtn) {
      const li_id = editBtn.dataset.li_id;
      const row = lineTable.getRows().find(r => r.getData().li_id == li_id);
      if (!row) return;

      const d = row.getData();

      document.getElementById("edit_li_id").value = d.li_id;
      document.getElementById("edit_material_code").value = d.li_material_code;
      document.getElementById("edit_material_description").value = d.li_material_description;
      document.getElementById("edit_qty").value = d.li_qty;
      document.getElementById("edit_value").value = d.li_po_value;
      document.getElementById("edit_specs").value = d.li_asset_specs || "";

      new bootstrap.Modal(document.getElementById("editLineItemModal")).show();
    }

    /* ALLOT ITEM */
    const allotBtn = e.target.closest(".allot-btn");
    if (allotBtn && !allotBtn.classList.contains("disabled")) {
      document.getElementById("modalItemDescription").textContent =
        decodeURIComponent(allotBtn.dataset.desc);

      document.getElementById("modal_li_id").value = allotBtn.dataset.li_id;
      document.getElementById("inp_material_code").value = allotBtn.dataset.mat;
      document.getElementById("inp_po_no").value = allotBtn.dataset.po;

      document.getElementById("allotmentForm").reset();
      document.getElementById("allocationSuccessPanel").classList.add("d-none");

      new bootstrap.Modal(document.getElementById("allotAssetModal")).show();
    }
  });

  /* -------------------------------------------------------
     SUBMIT EDIT LINE ITEM
  --------------------------------------------------------*/
  document.getElementById("editLineItemForm").addEventListener("submit", async function (ev) {
    ev.preventDefault();

    const payload = {
      li_id: document.getElementById("edit_li_id").value,
      li_material_code: document.getElementById("edit_material_code").value,
      li_material_description: document.getElementById("edit_material_description").value,
      li_qty: parseInt(document.getElementById("edit_qty").value, 10),
      li_po_value: document.getElementById("edit_value").value,
      li_asset_specs: document.getElementById("edit_specs").value
    };

    showLoader();

    const res = await fetch("/ams/asset/update/lineItem", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(payload)
    });
    const json = await res.json();

    hideLoader();

    if (json.success) {
      showToast("Line item updated", "success");

      const row = lineTable.getRows().find(r => r.getData().li_id == payload.li_id);
      if (row) row.update(payload);

      bootstrap.Modal.getInstance(document.getElementById("editLineItemModal")).hide();
    } else {
      showToast("Update failed", "danger");
    }
  });

  /* -------------------------------------------------------
     SUBMIT ALLOT FORM
  --------------------------------------------------------*/
  document.getElementById("allotmentForm").addEventListener("submit", async function (ev) {
    ev.preventDefault();

    const form = ev.target;
    const fd = new FormData(form);

    showLoader();

    const res = await fetch("/ams/asset/allocate", {
      method: "POST",
      body: fd
    });

    const json = await res.json();
    hideLoader();

    if (!json.success) {
      showToast(json.message || "Allocation failed", "danger");
      return;
    }

    /* SUCCESS UI */
    document.getElementById("succUser").textContent = fd.get("empname");
    document.getElementById("succDept").textContent = fd.get("department");
    document.getElementById("succTag").textContent = json.tag;

    document.getElementById("allocationFormBody").classList.add("d-none");
    document.getElementById("allocationFormFooter").classList.add("d-none");
    document.getElementById("allocationSuccessPanel").classList.remove("d-none");

    /* Update table row */
    const li_id = fd.get("li_id");
    const row = lineTable.getRows().find(r => r.getData().li_id == li_id);
    if (row) {
      const d = row.getData();
      row.update({
        li_allocated_qty: d.li_allocated_qty + 1,
        li_available_qty: d.li_available_qty - 1
      });
    }
  });

  /* -------------------------------------------------------
     OK BUTTON (SUCCESS PANEL)
  --------------------------------------------------------*/
  document.getElementById("successOkBtn").addEventListener("click", () => {
    bootstrap.Modal.getInstance(document.getElementById("allotAssetModal")).hide();
  });

  /* -------------------------------------------------------
     RESET MODAL ON CLOSE
  --------------------------------------------------------*/
  document.getElementById("allotAssetModal").addEventListener("hidden.bs.modal", () => {
    document.getElementById("allotmentForm").reset();
    document.getElementById("allotmentForm").classList.remove("was-validated");

    document.getElementById("allocationFormBody").classList.remove("d-none");
    document.getElementById("allocationFormFooter").classList.remove("d-none");

    document.getElementById("allocationSuccessPanel").classList.add("d-none");
  });

  /* -------------------------------------------------------
     PAGE INITIALIZATION
  --------------------------------------------------------*/
  document.addEventListener('DOMContentLoaded', () => {
    initTheme();
    
    // Theme toggle
    document.getElementById('themeToggle').addEventListener('click', () => {
      const currentTheme = document.documentElement.getAttribute('data-theme');
      const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
      document.documentElement.setAttribute('data-theme', newTheme);
      localStorage.setItem('theme', newTheme);
      updateThemeIcon(newTheme);
    });
    
    initMasterTable([]);
    initLineTable();

    const initialYear = yearSelect.value;
    fetchMasterData(initialYear);

    yearSelect.addEventListener("change", () => fetchMasterData(yearSelect.value));
    document.getElementById("refreshBtn").addEventListener("click", () => fetchMasterData(yearSelect.value));
  });
})();
</script>

