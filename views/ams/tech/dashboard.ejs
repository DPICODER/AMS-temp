<script>
let issues = [];
let currentFilter = 'all';

// Loader toggle
function showLoader(){ 
  document.getElementById('loader').classList.add('show'); 
}

function hideLoader(){ 
  document.getElementById('loader').classList.remove('show'); 
}

// Initialize theme
function initTheme() {
  const savedTheme = localStorage.getItem('theme') || 'light';
  document.documentElement.setAttribute('data-theme', savedTheme);
  updateThemeIcon(savedTheme);
}

function updateThemeIcon(theme) {
  const themeIcon = document.querySelector('#themeToggle i');
  themeIcon.className = theme === 'dark' ? 'bi bi-sun-fill' : 'bi bi-moon-fill';
}

// Fetch assigned issues
async function loadIssues() {
  showLoader();
  
  try {
    const res = await fetch('/ams/api/tech/issues');
    const j = await res.json();
    issues = j.data || [];
    updateStats();
    renderTickets();
  } catch (error) {
    console.error('Error loading issues:', error);
    renderErrorState();
  } finally {
    hideLoader();
  }
}

// Update statistics
function updateStats() {
  const counts = {
    all: issues.length,
    Assigned: issues.filter(i => i.status === 'Assigned').length,
    InRepair: issues.filter(i => i.status === 'InRepair').length,
    WaitingForPart: issues.filter(i => i.status === 'WaitingForPart').length,
    Resolved: issues.filter(i => i.status === 'Resolved').length
  };

  // Update stat cards
  document.getElementById('assignedCount').textContent = counts.Assigned;
  document.getElementById('inRepairCount').textContent = counts.InRepair;
  document.getElementById('waitingCount').textContent = counts.WaitingForPart;
  document.getElementById('resolvedCount').textContent = counts.Resolved;

  // Update filter tabs
  document.getElementById('allCount').textContent = counts.all;
  document.getElementById('assignedTabCount').textContent = counts.Assigned;
  document.getElementById('inRepairTabCount').textContent = counts.InRepair;
  document.getElementById('waitingTabCount').textContent = counts.WaitingForPart;
  document.getElementById('resolvedTabCount').textContent = counts.Resolved;
}

// Render error state
function renderErrorState() {
  const box = document.getElementById('ticketsContainer');
  box.innerHTML = `
    <div class="empty-state">
      <i class="bi bi-exclamation-triangle"></i>
      <h3>Error Loading Issues</h3>
      <p>There was a problem loading your assigned issues. Please try again.</p>
      <button class="action-btn btn-start" onclick="loadIssues()">
        <i class="bi bi-arrow-clockwise"></i> Try Again
      </button>
    </div>
  `;
}

// Render clean cards
function renderTickets() {
  const box = document.getElementById('ticketsContainer');
  
  // Filter issues based on current filter
  const filteredIssues = currentFilter === 'all' 
    ? issues 
    : issues.filter(i => i.status === currentFilter);

  if (!filteredIssues.length) {
    box.innerHTML = `
      <div class="empty-state">
        <i class="bi bi-inbox"></i>
        <h3>No ${currentFilter === 'all' ? '' : currentFilter} Tickets</h3>
        <p>${currentFilter === 'all' 
          ? "You don't have any assigned tickets." 
          : `You don't have any ${currentFilter.replace(/([A-Z])/g, ' $1').toLowerCase()} tickets.`}</p>
      </div>
    `;
    return;
  }

  let html = "";

  filteredIssues.forEach(t => {
    html += `
      <div class="ticket-card ${t.status.toLowerCase().replace('waitingforpart', 'waiting')}">
        <div class="ticket-header">
          <div>
            <div class="ticket-title">
              <i class="bi bi-ticket-perforated"></i>
              Ticket #${t.issue_id}
            </div>
            <div class="ticket-info">
              <div class="ticket-info-item">
                <i class="bi bi-tag"></i>
                <strong>Tag:</strong> ${t.tag}
              </div>
              <div class="ticket-info-item">
                <i class="bi bi-folder"></i>
                <strong>Category:</strong> ${t.category}
              </div>
              <div class="ticket-info-item">
                <i class="bi bi-card-text"></i>
                <strong>Description:</strong> ${t.description}
              </div>
            </div>
          </div>
          <div>${badge(t.status)}</div>
        </div>
        <div class="ticket-actions">
          ${actions(t)}
        </div>
      </div>
    `;
  });

  box.innerHTML = html;
  
  // Add fade-in animation to cards
  setTimeout(() => {
    document.querySelectorAll('.ticket-card').forEach((card, index) => {
      setTimeout(() => {
        card.classList.add('fade-in');
      }, index * 50);
    });
  }, 10);
}

// Status badge component
function badge(s) {
  const badges = {
    Assigned: `<span class="badge badge-assigned"><i class="bi bi-person-check"></i> Assigned</span>`,
    InRepair: `<span class="badge badge-inrepair"><i class="bi bi-tools"></i> In Repair</span>`,
    WaitingForPart: `<span class="badge badge-waiting"><i class="bi bi-clock"></i> Waiting for Part</span>`,
    Resolved: `<span class="badge badge-resolved"><i class="bi bi-check-circle"></i> Resolved</span>`
  };
  
  return badges[s] || `<span class="badge">${s}</span>`;
}

// Show actions depending on status
function actions(t) {
  if (t.status === "Assigned")
    return `<button class="action-btn btn-start" onclick="markInRepair(${t.issue_id})">
      <i class="bi bi-play-circle"></i> Start Repair
    </button>`;

  if (t.status === "InRepair")
    return `
      <button class="action-btn btn-wait" onclick="markWaiting(${t.issue_id})">
        <i class="bi bi-clock"></i> Waiting for Part
      </button>
      <button class="action-btn btn-resolve" onclick="openResolve(${t.issue_id})">
        <i class="bi bi-check-circle"></i> Resolve
      </button>
    `;

  if (t.status === "WaitingForPart")
    return `<button class="action-btn btn-resolve" onclick="openResolve(${t.issue_id})">
      <i class="bi bi-check-circle"></i> Resolve
    </button>`;

  return "";
}

// Update: Start Repair
async function markInRepair(id) {
  showLoader();
  
  try {
    const res = await fetch('/ams/api/tech/issues/update',{
      method:'POST', 
      headers:{'Content-Type':'application/json'},
      body: JSON.stringify({ issue_id:id, status:"InRepair" })
    });
    
    const j = await res.json();
    
    if (j.success) {
      await loadIssues();
    } else {
      alert(j.message || 'Failed to start repair');
    }
  } catch (error) {
    console.error('Error marking in repair:', error);
    alert('An error occurred while starting repair');
  } finally {
    hideLoader();
  }
}

// Update: Waiting for Part
async function markWaiting(id) {
  showLoader();
  
  try {
    const res = await fetch('/ams/api/tech/issues/update',{
      method:'POST', 
      headers:{'Content-Type':'application/json'},
      body: JSON.stringify({ issue_id:id, status:"WaitingForPart" })
    });
    
    const j = await res.json();
    
    if (j.success) {
      await loadIssues();
    } else {
      alert(j.message || 'Failed to update status');
    }
  } catch (error) {
    console.error('Error marking waiting:', error);
    alert('An error occurred while updating status');
  } finally {
    hideLoader();
  }
}

// Resolution modal
function openResolve(id){
  document.getElementById("resolveIssueId").value = id;
  document.getElementById("resolveNote").value = '';
  new bootstrap.Modal(document.getElementById("resolveModal")).show();
}

// Submit resolution
async function submitResolution() {
  const id = document.getElementById("resolveIssueId").value;
  const note = document.getElementById("resolveNote").value;

  if (!note.trim()) return alert("Please enter resolution summary");

  showLoader();
  
  try {
    const res = await fetch('/ams/api/tech/issues/resolve',{
      method:'POST', 
      headers:{'Content-Type':'application/json'},
      body: JSON.stringify({ issue_id:id, resolution:note })
    });
    
    const j = await res.json();
    
    if (j.success) {
      bootstrap.Modal.getInstance(document.getElementById("resolveModal")).hide();
      await loadIssues();
    } else {
      alert(j.message || 'Failed to resolve issue');
    }
  } catch (error) {
    console.error('Error resolving issue:', error);
    alert('An error occurred while resolving the issue');
  } finally {
    hideLoader();
  }
}

